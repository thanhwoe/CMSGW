@model WebEnterprise.ViewModels.System.Users.RoleAssignRequest

@{
    ViewData["Title"] = "Gán quyền";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <section class="admin-body">
        <div class="grid wide">
            <div class="row">
                <div class="col l-12">
                    <h1 class="admin-title">Role Assign</h1>
                </div>
            </div>
            <div class="row">
                <div class="col l-4">
                    <a class="btn btn-a" asp-action="Index" asp-controller="User">Back to list</a>
                </div>
            </div>
            <div class="row">
                <div class="col l-4 l-o-4">
                    <div class="admin-createUser">
                        <form asp-action="RoleAssign">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            @for (var i = 0; i < Model.Roles.Count; i++)
                            {
                                <div class="form-group">
                                    <label>
                                       @Model.Roles[i].Name
                                       <input type="checkbox" asp-for="Roles[i].Selected" />
                                       <input type="hidden" asp-for="Roles[i].Id" />
                                       <input type="hidden" asp-for="Roles[i].Name" />
                                    </label>
                                </div>
                            }
                            <div class="form-group">
                               <input type="submit" value="Asign" class="btn" />
                            </div>
                        </form>
                    </div> 
                </div>
            </div>
        </div>
    </section>